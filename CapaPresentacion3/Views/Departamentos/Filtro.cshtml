@model IEnumerable<CapaEntidades.ReporteDepartamentos_Result>

@{
    ViewBag.Title = "Filtro";
}

<h2 class="text-center m-5">Resultados de la busqueda</h2>

<table class="table">
    <tr>
        <th>
            <span>Departamentos</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Siglas)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siglas)
            </td>
        </tr>
    }

</table>
