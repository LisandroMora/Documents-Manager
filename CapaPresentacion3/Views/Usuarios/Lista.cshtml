@model IEnumerable<CapaEntidades.Usuarios>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>


<form class="form-inline my-2 mb-3 float-right" action="/Usuarios/Filtro" method="post">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="nombre"> 
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdDepartamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdUsuario, nombre=item.Nombre, correo=item.Correo, 
           IdDepartamento=item.IdDepartamento, cargo=item.Cargo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdUsuario })
        </td>
    </tr>
}

</table>

